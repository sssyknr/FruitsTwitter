<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- strawberryテーマ -->
    <style name="themeStrawberry" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarBackground">@color/strawberry3</item>
        <item name="textColor">@color/white</item>
        <item name="tabOn">@color/strawberry6</item>
        <item name="tabOff">@color/strawberry7</item>
        <item name="bg">@color/strawberry4</item>
        <item name="splashBg">@color/strawberry3</item>
        <item name="splashImg">@drawable/strawberry</item>
    </style>

    <!-- grapeテーマ -->
    <style name="themeGrape" parent="Theme.AppCompat.Light.NoActionBar">
